# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_BASE_URL=https://api.openai.com/v1

# ===== Z.AI CONFIGURATION =====
# Get your API key from https://z.ai/
ZAI_API_KEY=your_zai_api_key_here
ZAI_BASE_URL=https://api.z.ai/api/paas/v4/

# Z.AI Model Selection:
# glm-4.6      - Flagship, thinking capabilities, 200K context, $0.003/$0.012 per 1K
# glm-4.5      - **RECOMMENDED** for slides, 128K context, $0.002/$0.008 per 1K
# glm-4.5v     - Vision capabilities, 128K context, $0.0025/$0.010 per 1K
# glm-4.5-air  - Fast & economical, 128K context, $0.001/$0.004 per 1K
# glm-4        - Basic model, 128K context, $0.0015/$0.006 per 1K
ZAI_MODEL=glm-4.5

# ZAI Slide Generation Settings
# Maximum slides per request (recommended: 5-20)
ZAI_MAX_SLIDES=20
# Default slide style: modern, academic, corporate, creative
ZAI_DEFAULT_SLIDE_STYLE=modern
# Default audience: university, corporate, high_school, general
ZAI_DEFAULT_AUDIENCE=university
# Timeout for slide generation (seconds)
ZAI_SLIDE_TIMEOUT=120

# Local LLM Configuration (Ollama/LM Studio)
LOCAL_LLM_URL=http://localhost:11434/v1
LOCAL_LLM_MODEL=llama3.1:8b

# ===== LLM SERVICE CONFIGURATION =====
# Choose your LLM provider: openai, zai, ollama, lmstudio, local
LLM_TYPE=zai
# Set to true to use more economical models
BUDGET_MODE=false

# Vector Database Configuration
VECTOR_DB_PATH=./data/vector_db
CHROMA_PERSIST_DIRECTORY=./data/vector_db

# Application Configuration
APP_NAME=Tutor AI
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:8000

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if using traditional DB instead of JSON files)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis (if using for caching)
# REDIS_URL=redis://localhost:6379

# Additional Services
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# COHERE_API_KEY=your_cohere_api_key_here